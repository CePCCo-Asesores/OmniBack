# ================================
#          BACKEND (Node)
# ================================
NODE_ENV=development
PORT=8080
SERVICE_NAME=omni-back
LOG_LEVEL=debug
MAX_REQUEST_SIZE=1mb

# URLs públicas
PUBLIC_URL=http://localhost:3000         # URL del Frontend
BACKEND_URL=http://localhost:8080        # URL del Backend (este servicio)

# CORS (separadas por coma)
ALLOWED_ORIGIN=http://localhost:3000

# Sesión (si la usas en Passport/Express)
SESSION_SECRET=change-this-in-prod

# JWT
JWT_SECRET=change-this-also-in-prod
JWT_EXPIRES_IN=7d                        # ej: "15m", "24h", "7d"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Debe coincidir EXACTO con lo configurado en Google Cloud Console
GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback

# Base de datos (opcional)
DATABASE_URL=

# Build/Versionado
APP_VERSION=1.0.0
GIT_SHA=local
BUILD_TIME=local

# ================================
#          FRONTEND (React)
# ================================
# CRA (react-scripts):
REACT_APP_BACKEND_URL=http://localhost:8080
PUBLIC_URL=http://localhost:3000

# Vite (si migras):
# VITE_BACKEND_URL=http://localhost:8080
