# === Núcleo ===
NODE_ENV=development
PORT=8080
SERVICE_NAME=omni-back
LOG_LEVEL=debug
MAX_REQUEST_SIZE=1mb

# === URLs públicas ===
PUBLIC_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080

# === CORS ===
# Separa por comas TODAS las URLs desde donde cargarás el frontend
ALLOWED_ORIGIN=http://localhost:3000

# === Sesión / Cookies ===
SESSION_SECRET=change-this-in-prod

# === JWT ===
JWT_SECRET=change-this-also-in-prod
JWT_EXPIRES_IN=7d

# === Google OAuth ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback

# === Base de datos (opcional) ===
# Ejemplo Railway/Render: postgres://user:pass@host:port/db?sslmode=require
DATABASE_URL=

# === Versionado (se puede inyectar desde CI) ===
APP_VERSION=1.0.0
GIT_SHA=local
BUILD_TIME=local
